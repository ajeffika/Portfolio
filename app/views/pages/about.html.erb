<div class="app-container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-8">
      <h1 class="cover-heading text-center"><%=t('about_me')%></h1>
    </div>
  </div>
  <hr>
    <div class="row">

       <div class="col-md-4">
         <%=image_tag 'https://placehold.it/300x300', width: 300, alt: 'profile image', class:'profile-pic'%>

         </div>
      <div class="col-md-8">
        <div class="inner cover">

        <p class="lead">
          <%= t('portfolio_description')%>
          <p>
            <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controls="jobHistory"
            >
              <%=t('job_history')%>
            </button>

            <button
              class="btn btn-primary"
              type="button"
              data-toggle="collapse"
              data-target="#education"
              aria-expanded="false"
              aria-controls="education"
            >
              <%=t('education')%>
            </button>

          </p>

          <div class="collapse" id="jobHistory">
            <div class="card card-body">
                Qumak Professional Services Sp.Z.o.o
            </div>

          </div>

          <div class="collapse" id="education">
            <div class="card card-body education-item">
              <p><%=t('PCKZIU')%></p>
            </div>
            <div class="card card-body">
              <p><%=t('WSEI') %></p>
            </div>

          </div>

        </div>
      </div>
      <div class="col-md-12">
        <div class="skills">
          <div class="card text-dark">
            <%  @skills.each do |skill| %>
              <div class="skill">
                <h4><%=skill.title %></h4>
                <div class="progress">
                  <div class="progress-bar progress-bar-striped bg-warning"
                       role="progressbar"
                       aria-valuenow="<%=skill.percent_utilized %>"
                       aria-valuemax="100"
                       style="width: <%=skill.percent_utilized %>%;">
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

</div>

