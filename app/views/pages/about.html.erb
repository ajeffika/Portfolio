<div class="app-card-container">
  <div class="card">


  <h1 class="cover-heading">Witam na moim portfolio</h1>
  <hr>
    <div class="row">
       <div class="col-md-4">
         <%=image_tag 'https://placehold.it/300x400', width: 300, alt: 'profile image'%>
         <div class="skills">
          <%  @skills.each do |skill| %>
             <div class="skill">
               <h4><%=skill.title %></h4>
               <div class="progress">
                 <div class="progress-bar progress-bar-striped bg-warning"
                      role="progressbar"
                      aria-valuenow="<%=skill.percent_utilized %>"
                      aria-valuemax="100"
                      style="width: <%=skill.percent_utilized %>%;">
                 </div>
               </div>
             </div>
           <% end %>
           </div>
         </div>
      <div class="col-md-8">
        <div class="inner cover">

        <p class="lead">Ruby</p>
          <p>
            <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controls="jobHistory"
            >
              JobHistory
            </button>

            <button
              class="btn btn-primary"
              type="button"
              data-toggle="collapse"
              data-target="#education"
              aria-expanded="false"
              aria-controls="education"
            >
              Education
            </button>

          </p>

          <div class="collapse" id="jobHistory">
            <div class="card card-body">
                Jobsssssssssssssss
            </div>
            <div class="card card-body">
                Jobsssssssssssssss
            </div>
          </div>

          <div class="collapse" id="education">
            <div class="card card-body">
                  edu1
            </div>
            <div class="card card-body">
                  edu2
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

