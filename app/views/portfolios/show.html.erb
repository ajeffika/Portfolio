<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img( @portfolio_item.main_image.url, 'main'),width:'100%' %>
    </div>

    <div class="col-md-5">
      <%= @portfolio_item.title%>
      <hr>
      <%= @portfolio_item.subtitle%>
      <hr>
      <%= @portfolio_item.body%>
      <hr>

      <h3>Technologies used :</h3>

      <%@portfolio_item.technologies.each do |t| %>
        <p><%= t.name %></p>

      <% end %>
      <%if logged_in?(:site_admin) %>
        <div class='col-md-12'>
        <%= link_to 'Edit Item',  edit_portfolio_path, class:'btn btn-warning' %>

        </div>
      <%end %>
    </div>

  </div>

</div>



