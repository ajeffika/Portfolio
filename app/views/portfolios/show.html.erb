<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio_item.main_image.url, width:'100%' %>
    </div>

    <div class="col-md-5">
      <%= @portfolio_item.title%>
      <hr>
      <%= @portfolio_item.subtitle%>
      <hr>
      <%= @portfolio_item.body%>
      <hr>

      <h3>Technologies used :</h3>

      <%@portfolio_item.technologies.each do |t| %>
        <p><%= t.name %></p>

      <% end %>

    </div>

  </div>

</div>



